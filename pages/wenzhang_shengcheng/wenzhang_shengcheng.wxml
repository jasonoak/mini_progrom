<!--pages/wenzhang_shengcheng/wenzhang_shengcheng.wxml-->
<view class="container">
	<view class="form">
		<input bindinput="inputTitle" placeholder="{{temp}}" value="{{input}}"></input>
		<view bindtap="output" hover-class="hover-class">
			<text>一 键</text>
			<text>生 成</text>
		</view>
	</view>


<block wx:if="{{output}}">
	<view class="tips">
		<text>还没有内容，输入一个标题试试</text>
	</view>
	<view class="img" >
		<image  class="img" src="/static/null.png" mode="widthFix"></image>
	</view>
</block>



	<!-- 文本 -->
	<view class="body" wx:if="{{result}}">
		<text>{{result}}</text>
 
		<!-- 复制 -->
		<view class="copy" hover-class="hover-class" bindtap="copyHandler">
			<view>
				<text>一 键 复 制</text>
			</view>
		</view>
	</view>

</view>
