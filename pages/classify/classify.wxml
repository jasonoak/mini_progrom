<!--pages/classify/classify.wxml-->
<view class="container">
  <scroll-view class='nav_left' scroll-y='true' bindscrolltolower="getDataList">
    <block wx:for="{{cateItems}}" wx:key="{{index}}">
      <view class="nav_left_items {{curNav==item.numid?'active':''}}" bindtap="switchRightTab" data-index='{{index}}' data-id="{{item.numid}}">{{item.courage_name}}</view>
    </block>
  </scroll-view>

  <scroll-view class="nav_right" scroll-y="true" style="width: 464rpx; height: 1291rpx; display: block; box-sizing: border-box; left: 287rpx; top: 0rpx">
    <!--如果有数据，才遍历项-->
    <!-- <view wx:if="{{cateItems[curIndex].children.length>0}}">-->
      <block wx:for="{{cateItems[curIndex].children}}" wx:key="{{index}}"> 
        <view class="right_text" style="position: relative; width: 425rpx; height: 3793rpx; display: block; box-sizing: border-box; left: 25rpx; top: 149rpx">{{item.courage_txt}}</view>
       </block>


    <!-- 如果无数据，则显示数据
    <view class="nocate" wx:else>
      <image src="http://pic2.cxtuku.com/00/05/79/b863e9dcc935.jpg"></image>
      <text>该分类暂无数据</text>
    </view> -->
    
  </scroll-view>
</view>

