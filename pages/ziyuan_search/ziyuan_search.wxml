 </view>
  
  <view class='detail'  >
          <view class='view_for' wx:for="{{imglist}}" wx:for-item="image" >
            <navigator class="navigator_border" url='/pages/ziyuan_detail/ziyuan_detail?name={{image.courage_name}}&detail_img={{image.detail_img}}&web={{image.web_link}}' >
             <view class="border" bindtap="goto_detail" style="width: 666rpx; height: 239rpx; display: block; box-sizing: border-box">
                  <view class="biaoti_txt" > {{image.courage_name}}</view>
                  <view class="shijain_txt">发布时间：{{image.uptime}}</view>
                  <image src="{{image.type}}" style="position: relative; width: 90rpx; height: 90rpx; display: inline-block; box-sizing: border-box; left: 538rpx; top: -68rpx"></image>
             </view>
            </navigator>      
          </view>
          <view style='clear:both;'></view>
  </view>

</view>

