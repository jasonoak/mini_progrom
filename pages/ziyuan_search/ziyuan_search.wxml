<view>
    <van-search
      value="{{ search }}"
      placeholder="请输入搜索关键词"
      show-action
      bind:change="onChange" 
      bind:search="onSearch"
      bind:cancel="onCancel"
      focus="ture"
    ></van-search>
 <view wx-if="{{isResultShow}}" class="no_txt" >
  <view  style="position: relative; width: 716rpx; height: 62rpx; display: block; box-sizing: border-box; left: 0rpx; top: 352rpx">嘿呀哈，还没有数据哦！</view>
