/* pages/random_num/random_num.wxss */
.beijing
{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.title
{
  position: relative;
  font-family: 'wanzheng';
  font-size: 5ch;
  padding-left: 30rpx;
  padding-top: 10rpx;
  color:rgb(201, 122, 18);
  filter: drop-shadow(0 0 0.15rem rgb(201, 169, 67));
}
.ans_txt
{
  position: relative;
  font-family: 'wanzheng';

  padding-left: 50rpx;
  padding-top: 10rpx;
  color:rgb(201, 122, 18);
  font-size: 3ch;
}
.border
{
  position: relative;
  background-color:rgba(155, 229, 198, 0.548);
  border-radius: 28rpx;
  box-shadow: 0rpx 9rpx 12rpx 10rpx rgba(98, 98, 98, 0.1);
}

.des {
  position: relative;
  padding-left: 40rpx;
  padding-top: 20rpx;
  font-size: 26rpx;
  color: #8b8a8a;
  letter-spacing: 2rpx;
  line-height: 42rpx;
}
#numbers{
  position: absolute;
  top:5%;
  width: 100%;
  height: 650rpx;
  
}
#header{
  display: flex;
  flex-direction: row;
  width: 600rpx;
  justify-content: space-between;
  position: absolute;
  top:0;
  left: 50%;
  margin-left: -300rpx;
  line-height: 150rpx;
  font-size: 50rpx;
  
}

#header input{
  width:150rpx;
  height:150rpx;
  background-color: rgba(88, 88, 88, 0);
  color:black;
  border-radius: 50rpx;
  text-align: center;
  line-height: 150rpx;
  border: 2px solid #000000;
  box-shadow: 0px 0px 30rpx rgba(0, 0, 0, 0.2);
}


#result{
  position:absolute;
  width:500rpx;
  height:500rpx;
  bottom:0;
  left: 50%;
  margin-top:-250rpx;
  margin-left: -250rpx;
  text-align: center;
  line-height: 500rpx;
  font-size: 150rpx;
  background-color: rgba(255, 255, 255, 0);
  color:black;
  border-radius: 250rpx;
}

#btn-start{
  border: 2px solid #000000;
  position: absolute;
  width:150rpx;
  height: 150rpx;
  line-height: 150rpx;
  bottom: 15%;
  left: 50%;
  margin-left: -75rpx;
  background-color: rgba(236, 236, 236, 0.842);
  color:black;
  border-radius: 30rpx;
  text-align: center;
  border-width: 1px;
  border-color: black;
}